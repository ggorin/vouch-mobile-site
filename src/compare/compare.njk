<section class="page-header">
  <div class="container">
    <h1>Compare Wireless Carriers</h1>
    <p>See how Vouch Mobile stacks up against the competition</p>
  </div>
</section>

<section class="section">
  <div class="container">
    <h2 class="section-title">Vouch Mobile vs Competitors</h2>
    <p class="section-subtitle">Click any competitor to see a detailed comparison</p>

    <div class="compare-grid">
      {% for competitor in competitors %}
      <a href="/compare/vouch-vs-{{ competitor.slug }}/" class="compare-card">
        <h3>Vouch vs {{ competitor.name }}</h3>
        <div class="compare-summary">
          <div class="compare-item">
            <span class="label">Network:</span>
            <span class="value">{{ competitor.network }}</span>
          </div>
          <div class="compare-item">
            <span class="label">Starting:</span>
            <span class="value">{{ competitor.startingPrice }}</span>
          </div>
          <div class="compare-item">
            <span class="label">Contract:</span>
            <span class="value">{{ competitor.contract }}</span>
          </div>
        </div>
        <span class="compare-cta">Compare Now &rarr;</span>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

<section class="section section-alt">
  <div class="container">
    <h2 class="section-title">Quick Comparison Chart</h2>

    <div class="table-responsive">
      <table class="comparison-table comparison-table-full">
        <thead>
          <tr>
            <th>Carrier</th>
            <th>Network</th>
            <th>Starting Price</th>
            <th>Contract</th>
            <th>Credit Check</th>
            <th>5G</th>
          </tr>
        </thead>
        <tbody>
          <tr class="highlight-row">
            <td><strong>Vouch Mobile</strong></td>
            <td>AT&T</td>
            <td><strong>$30/mo</strong></td>
            <td>No</td>
            <td>No</td>
            <td>Included</td>
          </tr>
          {% for competitor in competitors %}
          <tr>
            <td>{{ competitor.name }}</td>
            <td>{{ competitor.network }}</td>
            <td>{{ competitor.startingPrice }}</td>
            <td>{{ competitor.contract }}</td>
            <td>{{ competitor.creditCheck }}</td>
            <td>{{ competitor.fiveG }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>

