<script>
// State search functionality
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('state-search');
  const stateGrid = document.getElementById('state-grid');
  const noResults = document.getElementById('no-results');

  if (searchInput && stateGrid) {
    searchInput.addEventListener('input', function(e) {
      filterStates(e.target.value.toLowerCase());
    });
  }

  window.filterStates = function(query) {
    const states = stateGrid.querySelectorAll('[data-state]');
    let visibleCount = 0;

    states.forEach(function(state) {
      const stateName = state.getAttribute('data-state');
      if (stateName.includes(query)) {
        state.style.display = '';
        visibleCount++;
      } else {
        state.style.display = 'none';
      }
    });

    noResults.style.display = visibleCount === 0 ? 'flex' : 'none';
  };
});
</script>
