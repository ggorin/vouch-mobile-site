---
layout: base.njk
---

{% block schema %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "ItemList",
      "name": "Best {{ carrier.name }} Alternatives for 2026",
      "description": "{{ description }}",
      "itemListOrder": "https://schema.org/ItemListOrderDescending",
      "numberOfItems": {{ carrier.alternatives | length }},
      "itemListElement": [
        {% for alt in carrier.alternatives %}
        {
          "@type": "ListItem",
          "position": {{ loop.index }},
          "item": {
            "@type": "Product",
            "name": "{{ alt.name }}",
            "brand": {
              "@type": "Brand",
              "name": "{{ alt.name }}"
            },
            "description": "{{ alt.tagline | default(alt.name + ' mobile phone service') }}",
            "offers": {
              "@type": "Offer",
              "price": "{{ alt.price | replace('$', '') | replace('/mo', '') }}",
              "priceCurrency": "USD",
              "priceValidUntil": "2026-12-31",
              "availability": "https://schema.org/InStock"
            }
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {% for faq in carrier.faqs %}
        {
          "@type": "Question",
          "name": "{{ faq.question }}",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "{{ faq.answer }}"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "{{ site.url }}"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Compare",
          "item": "{{ site.url }}/compare/"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "{{ carrier.name }} Alternatives"
        }
      ]
    }
  ]
}
</script>
{% endblock %}

{# ============================================================================
   HERO SECTION - Dramatic gradient with floating elements
   ============================================================================ #}
<section class="alt-hero">
  <div class="alt-hero__bg">
    <div class="alt-hero__gradient"></div>
    <div class="alt-hero__orbs">
      <div class="alt-hero__orb alt-hero__orb--1"></div>
      <div class="alt-hero__orb alt-hero__orb--2"></div>
      <div class="alt-hero__orb alt-hero__orb--3"></div>
    </div>
    <div class="alt-hero__grid"></div>
  </div>

  <div class="container">
    <nav class="breadcrumb-v2" aria-label="Breadcrumb">
      <a href="/">Home</a>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
      <a href="/compare/">Compare</a>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
      <span>{{ carrier.name }} Alternatives</span>
    </nav>

    <div class="alt-hero__content">
      <div class="alt-hero__badge">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>
        {{ carrier.alternatives | length }} Top Alternatives for 2026
      </div>

      <h1 class="alt-hero__title">
        <span class="alt-hero__title-small">Best</span>
        <span class="alt-hero__title-carrier">{{ carrier.name }}</span>
        <span class="alt-hero__title-small">Alternatives</span>
      </h1>

      <p class="alt-hero__subtitle">{{ carrier.tagline }}</p>

      <div class="alt-hero__stats">
        <div class="alt-hero__stat">
          <span class="alt-hero__stat-value">{{ carrier.alternatives | length }}</span>
          <span class="alt-hero__stat-label">Options Compared</span>
        </div>
        <div class="alt-hero__stat-divider"></div>
        <div class="alt-hero__stat">
          <span class="alt-hero__stat-value">${{ carrier.alternatives[0].price | replace('$', '') | replace('/mo', '') }}</span>
          <span class="alt-hero__stat-label">Lowest Price</span>
        </div>
        <div class="alt-hero__stat-divider"></div>
        <div class="alt-hero__stat">
          <span class="alt-hero__stat-value">5G</span>
          <span class="alt-hero__stat-label">Included</span>
        </div>
      </div>

      <a href="#rankings" class="alt-hero__scroll">
        <span>See Rankings</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12l7 7 7-7"/></svg>
      </a>
    </div>
  </div>
</section>

{# ============================================================================
   RANKING CARDS - Visual hierarchy with podium effect
   ============================================================================ #}
<section class="alt-rankings" id="rankings">
  <div class="container">
    <div class="alt-rankings__header">
      <span class="section-tag">Rankings</span>
      <h2 class="alt-rankings__title">Top {{ carrier.name }} Alternatives</h2>
      <p class="alt-rankings__subtitle">Ranked by value, coverage, and features</p>
    </div>

    <div class="alt-rankings__podium">
      {% for alt in carrier.alternatives %}
      <div class="alt-card {% if loop.index == 1 %}alt-card--winner{% elif loop.index == 2 %}alt-card--silver{% elif loop.index == 3 %}alt-card--bronze{% endif %}" style="--delay: {{ loop.index * 0.1 }}s">
        <div class="alt-card__rank">
          {% if loop.index == 1 %}
          <div class="alt-card__rank-crown">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
          </div>
          {% endif %}
          <span class="alt-card__rank-number">#{{ loop.index }}</span>
        </div>

        <div class="alt-card__header">
          <h3 class="alt-card__name">{{ alt.name }}</h3>
          <span class="alt-card__network">{{ alt.network }} Network</span>
        </div>

        <div class="alt-card__price">
          <span class="alt-card__price-amount">{{ alt.price }}</span>
          {% if alt.priceNote %}
          <span class="alt-card__price-note">{{ alt.priceNote }}</span>
          {% endif %}
        </div>

        <ul class="alt-card__features">
          {% for feature in alt.features %}
          <li>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
            {{ feature }}
          </li>
          {% endfor %}
        </ul>

        {% if alt.isVouch %}
        <div class="alt-card__recommended">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
          Our Pick
        </div>
        {% endif %}

        <a href="{{ alt.url | default('https://vouchmobile.com') }}" class="alt-card__cta {% if alt.isVouch %}alt-card__cta--primary{% endif %}">
          {% if alt.isVouch %}
          Get Started
          {% else %}
          Learn More
          {% endif %}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{# ============================================================================
   WHY LEAVE SECTION - Pain points
   ============================================================================ #}
<section class="alt-painpoints">
  <div class="container">
    <div class="alt-painpoints__header">
      <span class="section-tag section-tag--coral">Common Issues</span>
      <h2 class="alt-painpoints__title">Why People Leave {{ carrier.name }}</h2>
    </div>

    <div class="alt-painpoints__grid">
      {% for pain in carrier.painPoints %}
      <div class="alt-painpoint" style="--delay: {{ loop.index * 0.1 }}s">
        <div class="alt-painpoint__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            {% if loop.index == 1 %}
            <circle cx="12" cy="12" r="10"></circle><path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"></path><path d="M12 18V6"></path>
            {% elif loop.index == 2 %}
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            {% elif loop.index == 3 %}
            <path d="M5 12.55a11 11 0 0 1 14.08 0"></path><path d="M1.42 9a16 16 0 0 1 21.16 0"></path><path d="M8.53 16.11a6 6 0 0 1 6.95 0"></path><line x1="12" y1="20" x2="12.01" y2="20"></line>
            {% else %}
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline>
            {% endif %}
          </svg>
        </div>
        <h3 class="alt-painpoint__title">{{ pain.title }}</h3>
        <p class="alt-painpoint__desc">{{ pain.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{# ============================================================================
   COMPARISON TABLE - Full feature comparison
   ============================================================================ #}
<section class="alt-compare">
  <div class="container">
    <div class="alt-compare__header">
      <span class="section-tag">Comparison</span>
      <h2 class="alt-compare__title">Feature-by-Feature Breakdown</h2>
      <p class="alt-compare__subtitle">See how each alternative stacks up against {{ carrier.name }}</p>
    </div>

    <div class="alt-compare__wrapper">
      <table class="alt-compare__table">
        <thead>
          <tr>
            <th class="alt-compare__feature-col">Feature</th>
            <th class="alt-compare__carrier-col alt-compare__carrier-col--original">
              <span class="alt-compare__carrier-name">{{ carrier.name }}</span>
              <span class="alt-compare__carrier-tag">Original</span>
            </th>
            {% for alt in carrier.alternatives %}{% if loop.index <= 3 %}
            <th class="alt-compare__alt-col {% if alt.isVouch %}alt-compare__alt-col--winner{% endif %}">
              {% if alt.isVouch %}
              <span class="alt-compare__winner-badge">Best Value</span>
              {% endif %}
              <span class="alt-compare__carrier-name">{{ alt.name }}</span>
            </th>
            {% endif %}{% endfor %}
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="alt-compare__feature">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
              Monthly Price
            </td>
            <td class="alt-compare__value alt-compare__value--muted">{{ carrier.originalPrice }}</td>
            {% for alt in carrier.alternatives %}{% if loop.index <= 3 %}
            <td class="alt-compare__value {% if alt.isVouch %}alt-compare__value--winner{% endif %}">{{ alt.price }}</td>
            {% endif %}{% endfor %}
          </tr>
          <tr>
            <td class="alt-compare__feature">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12.55a11 11 0 0 1 14.08 0"></path><path d="M1.42 9a16 16 0 0 1 21.16 0"></path><circle cx="12" cy="20" r="1"></circle></svg>
              Network
            </td>
            <td class="alt-compare__value alt-compare__value--muted">{{ carrier.network }}</td>
            {% for alt in carrier.alternatives %}{% if loop.index <= 3 %}
            <td class="alt-compare__value {% if alt.isVouch %}alt-compare__value--winner{% endif %}">{{ alt.network }}</td>
            {% endif %}{% endfor %}
          </tr>
          <tr>
            <td class="alt-compare__feature">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
              5G Access
            </td>
            <td class="alt-compare__value alt-compare__value--muted">{{ carrier.fiveG }}</td>
            {% for alt in carrier.alternatives %}{% if loop.index <= 3 %}
            <td class="alt-compare__value {% if alt.isVouch %}alt-compare__value--winner{% endif %}">
              {% if alt.fiveG %}
              <svg class="alt-compare__check" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
              Included
              {% else %}
              {{ alt.fiveG }}
              {% endif %}
            </td>
            {% endif %}{% endfor %}
          </tr>
          <tr>
            <td class="alt-compare__feature">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
              Contract
            </td>
            <td class="alt-compare__value alt-compare__value--muted">{{ carrier.contract }}</td>
            {% for alt in carrier.alternatives %}{% if loop.index <= 3 %}
            <td class="alt-compare__value {% if alt.isVouch %}alt-compare__value--winner{% endif %}">
              {% if alt.contract == "No" or alt.contract == "None" %}
              <svg class="alt-compare__check" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
              None
              {% else %}
              {{ alt.contract }}
              {% endif %}
            </td>
            {% endif %}{% endfor %}
          </tr>
          <tr>
            <td class="alt-compare__feature">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
              Credit Check
            </td>
            <td class="alt-compare__value alt-compare__value--muted">{{ carrier.creditCheck }}</td>
            {% for alt in carrier.alternatives %}{% if loop.index <= 3 %}
            <td class="alt-compare__value {% if alt.isVouch %}alt-compare__value--winner{% endif %}">
              {% if alt.creditCheck == "No" or alt.creditCheck == "None" %}
              <svg class="alt-compare__check" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
              None
              {% else %}
              {{ alt.creditCheck }}
              {% endif %}
            </td>
            {% endif %}{% endfor %}
          </tr>
          <tr>
            <td class="alt-compare__feature">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
              Hotspot
            </td>
            <td class="alt-compare__value alt-compare__value--muted">{{ carrier.hotspot }}</td>
            {% for alt in carrier.alternatives %}{% if loop.index <= 3 %}
            <td class="alt-compare__value {% if alt.isVouch %}alt-compare__value--winner{% endif %}">{{ alt.hotspot }}</td>
            {% endif %}{% endfor %}
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>

{# ============================================================================
   WINNER SPOTLIGHT - Vouch featured with glow effect
   ============================================================================ #}
{% set winner = carrier.alternatives | selectattr("isVouch") | first %}
{% if winner %}
<section class="alt-spotlight">
  <div class="container">
    <div class="alt-spotlight__card">
      <div class="alt-spotlight__glow"></div>
      <div class="alt-spotlight__content">
        <div class="alt-spotlight__header">
          <div class="alt-spotlight__badge">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            Our Top Pick
          </div>
          <h2 class="alt-spotlight__title">{{ winner.name }}</h2>
          <p class="alt-spotlight__tagline">The smarter choice for {{ carrier.name }} switchers</p>
        </div>

        <div class="alt-spotlight__details">
          <div class="alt-spotlight__price">
            <span class="alt-spotlight__price-label">Starting at</span>
            <div class="alt-spotlight__price-amount">
              <span class="alt-spotlight__price-dollar">$</span>
              <span class="alt-spotlight__price-value">{{ winner.price | replace('$', '') | replace('/mo', '') }}</span>
              <span class="alt-spotlight__price-period">/mo</span>
            </div>
          </div>

          <ul class="alt-spotlight__features">
            {% for feature in winner.features %}
            <li>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
              {{ feature }}
            </li>
            {% endfor %}
          </ul>
        </div>

        <div class="alt-spotlight__reasons">
          <h3>Why switch from {{ carrier.name }} to {{ winner.name }}?</h3>
          <div class="alt-spotlight__reasons-grid">
            {% for reason in winner.switchReasons | default(["Save money every month", "No credit check required", "Same great network coverage", "No contracts or commitments"]) %}
            <div class="alt-spotlight__reason">
              <div class="alt-spotlight__reason-num">{{ loop.index }}</div>
              <p>{{ reason }}</p>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="alt-spotlight__cta">
          <a href="https://vouchmobile.com" class="btn btn-primary btn-lg">
            Switch to {{ winner.name }}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </a>
          <p class="alt-spotlight__cta-note">Free SIM shipping. Activate in minutes.</p>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{# ============================================================================
   FAQ SECTION - Accordion with switching questions
   ============================================================================ #}
<section class="alt-faq" id="faq">
  <div class="container">
    <div class="alt-faq__header">
      <span class="section-tag">FAQ</span>
      <h2 class="alt-faq__title">Switching from {{ carrier.name }}</h2>
      <p class="alt-faq__subtitle">Common questions about making the switch</p>
    </div>

    <div class="alt-faq__grid">
      {% for faq in carrier.faqs %}
      <div class="alt-faq__item">
        <button class="alt-faq__trigger" aria-expanded="false">
          <span class="alt-faq__question">{{ faq.question }}</span>
          <span class="alt-faq__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
          </span>
        </button>
        <div class="alt-faq__answer">
          <p>{{ faq.answer }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{# ============================================================================
   CTA SECTION - Strong call-to-action
   ============================================================================ #}
<section class="alt-cta">
  <div class="alt-cta__bg">
    <div class="alt-cta__gradient"></div>
    <div class="alt-cta__pattern"></div>
  </div>
  <div class="container">
    <div class="alt-cta__content">
      <div class="alt-cta__badge">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
        Ready to Switch?
      </div>
      <h2 class="alt-cta__title">Leave {{ carrier.name }} Behind</h2>
      <p class="alt-cta__text">Join thousands who've made the smart switch. Better coverage, better price, no hassle.</p>

      <div class="alt-cta__features">
        <span class="alt-cta__feature">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"></polyline></svg>
          Keep Your Number
        </span>
        <span class="alt-cta__feature">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"></polyline></svg>
          Free Shipping
        </span>
        <span class="alt-cta__feature">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"></polyline></svg>
          No Credit Check
        </span>
      </div>

      <div class="alt-cta__buttons">
        <a href="https://vouchmobile.com" class="btn btn-primary btn-lg">
          Get Started Today
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
        </a>
        <a href="/compare/" class="btn btn-outline-light btn-lg">Compare All Carriers</a>
      </div>
    </div>
  </div>
</section>

<script>
// FAQ Accordion
document.addEventListener('DOMContentLoaded', function() {
  const faqTriggers = document.querySelectorAll('.alt-faq__trigger');

  faqTriggers.forEach(function(trigger) {
    trigger.addEventListener('click', function() {
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      const answer = this.nextElementSibling;

      // Close all others
      faqTriggers.forEach(function(t) {
        t.setAttribute('aria-expanded', 'false');
        t.nextElementSibling.style.maxHeight = null;
      });

      // Toggle current
      if (!isExpanded) {
        this.setAttribute('aria-expanded', 'true');
        answer.style.maxHeight = answer.scrollHeight + 'px';
      }
    });
  });
});
</script>
