---
layout: base.njk
---

<article class="article">
  <header class="article-header">
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <a href="/">Home</a> &rsaquo;
      <a href="/blog/">Blog</a> &rsaquo;
      <span>{{ title }}</span>
    </nav>
    <h1>{{ title }}</h1>
    <div class="article-meta">{{ date | readableDate }} &bull; {{ readTime }} min read</div>
    {% if image %}
    <div class="article-image mt-8 mb-8">
      {% image image, title, [400, 800, 1000], "(min-width: 768px) 80vw, 100vw", { style: "width: 100%; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);", loading: "eager" } %}
    </div>
    {% endif %}
  </header>

  <div class="article-content">
    {{ content | safe }}
  </div>
</article>

<section class="section section-alt">
  <div class="container">
    <h2 class="text-2xl mb-8">More Articles</h2>
    <div class="blog-grid">
      {% set posts = collections.posts | reverse %}
      {% set count = 0 %}
      {% for post in posts %}
      {% if post.url != page.url and count < 3 %}
      {% set count = count + 1 %}
      <article class="blog-card">
        <a href="{{ post.url }}" class="blog-card-image-link" aria-label="Read {{ post.data.title }}">
          <div class="blog-card-image">
             {% if post.data.image %}
            {% image post.data.image, post.data.title, [300, 600], "(min-width: 768px) 30vw, 100vw", { style: "width: 100%; height: 100%; object-fit: cover;" } %}
            {% endif %}
          </div>
        </a>
        <div class="blog-card-content">
          <h3 class="blog-card-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h3>
          <p class="blog-card-excerpt">{{ post.data.excerpt }}</p>
        </div>
      </article>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="cta-section section">
  <div class="container">
    <div class="cta-content">
      <h2>Ready to Switch?</h2>
      <p>Get unlimited talk, text, and data for just $30/month. No credit check required.</p>
      <a href="https://vouchmobile.com" class="btn btn-primary btn-large">Get Started Today</a>
    </div>
  </div>
</section>
