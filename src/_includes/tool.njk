---
layout: base.njk
---

{% from "components/how-to-steps.njk" import howToSteps %}

{% block schema %}
{# WebApplication Schema #}
{% set schemaApp = {
  name: tool.name,
  description: tool.description,
  url: site.url + "/tools/" + tool.slug + "/"
} %}
{% include "schema/webapplication.njk" %}

{# Breadcrumb Schema #}
{% set breadcrumbItems = [
  { name: "Home", url: site.url },
  { name: "Tools", url: site.url + "/tools/" },
  { name: tool.name, url: site.url + "/tools/" + tool.slug + "/" }
] %}
{% include "schema/breadcrumb.njk" %}

{# HowTo Schema #}
{% if tool.howToSteps and tool.howToSteps.length > 0 %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Use the {{ tool.name }}",
  "description": "{{ tool.description }}",
  "totalTime": "PT{{ tool.estimatedTime | replace(' seconds', 'S') | replace(' minute', 'M') | replace(' minutes', 'M') | replace('s', '') }}",
  "tool": {
    "@type": "HowToTool",
    "name": "{{ tool.name }}"
  },
  "step": [
    {% for step in tool.howToSteps %}
    {
      "@type": "HowToStep",
      "position": {{ loop.index }},
      "name": "{{ step.title }}",
      "text": "{{ step.description }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
{% endif %}

{# FAQ Schema #}
{% if tool.faqs and tool.faqs.length > 0 %}
{% set schemaFaqs = tool.faqs %}
{% include "schema/faq.njk" %}
{% endif %}
{% endblock %}

{# ============================================================================
   TOOL HERO SECTION
   ============================================================================ #}
<section class="tool-hero">
  <div class="tool-hero__bg">
    <div class="tool-hero__gradient"></div>
    <div class="tool-hero__pattern"></div>
    <div class="tool-hero__orbs">
      <div class="tool-hero__orb tool-hero__orb--1"></div>
      <div class="tool-hero__orb tool-hero__orb--2"></div>
    </div>
  </div>

  <div class="container">
    <nav class="breadcrumb-v2" aria-label="Breadcrumb">
      <a href="/">Home</a>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
      <a href="/tools/">Tools</a>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
      <span>{{ tool.shortName }}</span>
    </nav>

    <div class="tool-hero__content">
      <div class="tool-hero__badge">
        <span class="tool-hero__icon">
          {% if tool.icon == "smartphone" %}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect><line x1="12" y1="18" x2="12.01" y2="18"></line></svg>
          {% elif tool.icon == "dollar-sign" %}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
          {% elif tool.icon == "bar-chart" %}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg>
          {% else %}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path></svg>
          {% endif %}
        </span>
        {{ tool.category }} Tool
      </div>

      <h1 class="tool-hero__title">{{ tool.name }}</h1>
      <p class="tool-hero__tagline">{{ tool.tagline }}</p>

      <div class="tool-hero__meta">
        <span class="tool-hero__time">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
          {{ tool.estimatedTime }}
        </span>
        <span class="tool-hero__divider"></span>
        <span class="tool-hero__free">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>
          Free to use
        </span>
      </div>
    </div>
  </div>
</section>

{# ============================================================================
   TOOL INTERFACE SECTION - Main Interactive Component
   ============================================================================ #}
<section class="tool-interface" id="tool">
  <div class="container">
    <div class="tool-interface__card">
      <div class="tool-interface__glow"></div>

      {# Tool Header #}
      <div class="tool-interface__header">
        <h2 class="tool-interface__title">{{ tool.shortName }}</h2>
        <p class="tool-interface__desc">{{ tool.description | truncate(120) }}</p>
      </div>

      {# Tool Body - Dynamic Content Based on Tool Type #}
      <div class="tool-interface__body" id="tool-body">

        {% if tool.slug == "compatibility-checker" %}
        {# ================= COMPATIBILITY CHECKER ================= #}
        <div class="tool-form" id="compatibility-form">
          <div class="tool-tabs">
            <button class="tool-tab tool-tab--active" data-tab="imei">IMEI Number</button>
            <button class="tool-tab" data-tab="model">Phone Model</button>
          </div>

          <div class="tool-tab-content tool-tab-content--active" id="tab-imei">
            <div class="tool-input-group">
              <label for="imei-input" class="tool-label">Enter Your IMEI Number</label>
              <div class="tool-input-wrapper">
                <input type="text" id="imei-input" class="tool-input" placeholder="Enter 15-digit IMEI" maxlength="15" pattern="[0-9]{15}">
                <span class="tool-input-icon tool-input-icon--valid" id="imei-valid">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
                </span>
                <span class="tool-input-icon tool-input-icon--invalid" id="imei-invalid">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </span>
              </div>
              <p class="tool-help">Dial *#06# on your phone to find your IMEI</p>
            </div>
          </div>

          <div class="tool-tab-content" id="tab-model">
            <div class="tool-input-group">
              <label for="brand-select" class="tool-label">Select Phone Brand</label>
              <select id="brand-select" class="tool-select">
                <option value="">Choose a brand...</option>
                <option value="apple">Apple</option>
                <option value="samsung">Samsung</option>
                <option value="google">Google</option>
                <option value="motorola">Motorola</option>
                <option value="oneplus">OnePlus</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="tool-input-group" id="model-group" style="display: none;">
              <label for="model-select" class="tool-label">Select Model</label>
              <select id="model-select" class="tool-select">
                <option value="">Choose a model...</option>
              </select>
            </div>
          </div>

          <button class="tool-submit" id="check-compatibility" disabled>
            <span class="tool-submit__text">Check Compatibility</span>
            <span class="tool-submit__loader">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="32"><animate attributeName="stroke-dashoffset" dur="1s" repeatCount="indefinite" values="32;0"/></circle></svg>
            </span>
          </button>
        </div>

        {% elif tool.slug == "savings-calculator" %}
        {# ================= SAVINGS CALCULATOR ================= #}
        <div class="tool-form" id="savings-form">
          <div class="tool-input-group">
            <label for="current-bill" class="tool-label">Your Current Monthly Bill</label>
            <div class="tool-input-wrapper tool-input-wrapper--currency">
              <span class="tool-currency">$</span>
              <input type="number" id="current-bill" class="tool-input tool-input--currency" placeholder="0" min="0" max="500" step="1">
            </div>
            <p class="tool-help">Include all lines and fees from your current carrier</p>
          </div>

          <div class="tool-input-group">
            <label for="num-lines" class="tool-label">Number of Lines</label>
            <div class="tool-stepper">
              <button class="tool-stepper__btn" id="lines-minus" aria-label="Decrease lines">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"></line></svg>
              </button>
              <input type="number" id="num-lines" class="tool-stepper__input" value="1" min="1" max="10" readonly>
              <button class="tool-stepper__btn" id="lines-plus" aria-label="Increase lines">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
              </button>
            </div>
          </div>

          <div class="tool-input-group">
            <label for="carrier-select" class="tool-label">Current Carrier (Optional)</label>
            <select id="carrier-select" class="tool-select">
              <option value="">Select your carrier...</option>
              <option value="att">AT&T</option>
              <option value="verizon">Verizon</option>
              <option value="tmobile">T-Mobile</option>
              <option value="sprint">Sprint/T-Mobile</option>
              <option value="cricket">Cricket</option>
              <option value="metro">Metro by T-Mobile</option>
              <option value="boost">Boost Mobile</option>
              <option value="visible">Visible</option>
              <option value="other">Other</option>
            </select>
          </div>

          <button class="tool-submit" id="calculate-savings">
            <span class="tool-submit__text">Calculate My Savings</span>
            <span class="tool-submit__loader">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="32"><animate attributeName="stroke-dashoffset" dur="1s" repeatCount="indefinite" values="32;0"/></circle></svg>
            </span>
          </button>
        </div>

        {% elif tool.slug == "data-calculator" %}
        {# ================= DATA CALCULATOR ================= #}
        <div class="tool-form" id="data-form">
          <div class="tool-activities">
            <p class="tool-label">How do you use your phone? (hours per day)</p>

            <div class="tool-activity">
              <div class="tool-activity__info">
                <span class="tool-activity__icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="23 7 16 12 23 17 23 7"></polygon><rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect></svg>
                </span>
                <span class="tool-activity__name">Video Streaming</span>
                <span class="tool-activity__usage">(Netflix, YouTube, etc.)</span>
              </div>
              <div class="tool-slider-group">
                <input type="range" id="video-hours" class="tool-slider" min="0" max="8" step="0.5" value="0">
                <span class="tool-slider__value" id="video-value">0 hrs</span>
              </div>
            </div>

            <div class="tool-activity">
              <div class="tool-activity__info">
                <span class="tool-activity__icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                </span>
                <span class="tool-activity__name">Social Media</span>
                <span class="tool-activity__usage">(TikTok, Instagram, etc.)</span>
              </div>
              <div class="tool-slider-group">
                <input type="range" id="social-hours" class="tool-slider" min="0" max="8" step="0.5" value="0">
                <span class="tool-slider__value" id="social-value">0 hrs</span>
              </div>
            </div>

            <div class="tool-activity">
              <div class="tool-activity__info">
                <span class="tool-activity__icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"></circle><circle cx="18" cy="16" r="3"></circle></svg>
                </span>
                <span class="tool-activity__name">Music Streaming</span>
                <span class="tool-activity__usage">(Spotify, Apple Music, etc.)</span>
              </div>
              <div class="tool-slider-group">
                <input type="range" id="music-hours" class="tool-slider" min="0" max="8" step="0.5" value="0">
                <span class="tool-slider__value" id="music-value">0 hrs</span>
              </div>
            </div>

            <div class="tool-activity">
              <div class="tool-activity__info">
                <span class="tool-activity__icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="23 7 16 12 23 17 23 7"></polygon><rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect></svg>
                </span>
                <span class="tool-activity__name">Video Calls</span>
                <span class="tool-activity__usage">(Zoom, FaceTime, etc.)</span>
              </div>
              <div class="tool-slider-group">
                <input type="range" id="calls-hours" class="tool-slider" min="0" max="4" step="0.5" value="0">
                <span class="tool-slider__value" id="calls-value">0 hrs</span>
              </div>
            </div>

            <div class="tool-activity">
              <div class="tool-activity__info">
                <span class="tool-activity__icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
                </span>
                <span class="tool-activity__name">Web Browsing</span>
                <span class="tool-activity__usage">(News, shopping, etc.)</span>
              </div>
              <div class="tool-slider-group">
                <input type="range" id="browse-hours" class="tool-slider" min="0" max="8" step="0.5" value="0">
                <span class="tool-slider__value" id="browse-value">0 hrs</span>
              </div>
            </div>
          </div>

          <div class="tool-input-group">
            <label for="video-quality" class="tool-label">Video Streaming Quality</label>
            <select id="video-quality" class="tool-select">
              <option value="sd">Standard Definition (480p)</option>
              <option value="hd" selected>HD (720p/1080p)</option>
              <option value="4k">4K Ultra HD</option>
            </select>
          </div>

          <button class="tool-submit" id="calculate-data">
            <span class="tool-submit__text">Calculate My Data Needs</span>
            <span class="tool-submit__loader">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="32"><animate attributeName="stroke-dashoffset" dur="1s" repeatCount="indefinite" values="32;0"/></circle></svg>
            </span>
          </button>
        </div>
        {% endif %}
      </div>

      {# Results Display #}
      <div class="tool-results" id="tool-results" style="display: none;">
        <div class="tool-results__header">
          <div class="tool-results__icon tool-results__icon--success">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
          </div>
          <h3 class="tool-results__title" id="results-title">Results</h3>
        </div>

        <div class="tool-results__content" id="results-content">
          {# Dynamic results inserted by JavaScript #}
        </div>

        <div class="tool-results__actions">
          <button class="tool-results__reset" id="reset-tool">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="1 4 1 10 7 10"></polyline><path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path></svg>
            Start Over
          </button>
          <button class="tool-results__share" id="share-results">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="18" cy="5" r="3"></circle><circle cx="6" cy="12" r="3"></circle><circle cx="18" cy="19" r="3"></circle><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line></svg>
            Share Results
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

{# ============================================================================
   HOW TO USE SECTION
   ============================================================================ #}
{% if tool.howToSteps and tool.howToSteps.length > 0 %}
<section class="tool-howto">
  <div class="container">
    <div class="tool-howto__header">
      <span class="section-tag">How To Use</span>
      <h2>Using the {{ tool.shortName }}</h2>
      <p>Follow these simple steps to get your results</p>
    </div>
    {{ howToSteps(steps=tool.howToSteps) }}
  </div>
</section>
{% endif %}

{# ============================================================================
   WHY THIS MATTERS SECTION
   ============================================================================ #}
{% if tool.whyMatters %}
<section class="tool-why">
  <div class="container">
    <div class="tool-why__grid">
      <div class="tool-why__content">
        <span class="section-tag section-tag--coral">Why This Matters</span>
        <h2>{{ tool.whyMatters.title }}</h2>
        <p class="tool-why__text">{{ tool.whyMatters.content }}</p>

        {% if tool.whyMatters.points %}
        <ul class="tool-why__points">
          {% for point in tool.whyMatters.points %}
          <li>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"></polyline></svg>
            <span>{{ point }}</span>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
      <div class="tool-why__visual">
        <div class="tool-why__card">
          <div class="tool-why__card-icon">
            {% if tool.icon == "smartphone" %}
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect><line x1="12" y1="18" x2="12.01" y2="18"></line></svg>
            {% elif tool.icon == "dollar-sign" %}
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
            {% elif tool.icon == "bar-chart" %}
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg>
            {% else %}
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path></svg>
            {% endif %}
          </div>
          <div class="tool-why__card-content">
            <span class="tool-why__card-label">{{ tool.category }} Tool</span>
            <h3 class="tool-why__card-title">{{ tool.shortName }}</h3>
            <p class="tool-why__card-desc">{{ tool.tagline }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{# ============================================================================
   RELATED TOOLS SECTION
   ============================================================================ #}
{% if tool.relatedTools and tool.relatedTools.length > 0 %}
<section class="tool-related">
  <div class="container">
    <div class="tool-related__header">
      <span class="section-tag">Related Tools</span>
      <h2>More Helpful Tools</h2>
    </div>
    <div class="tool-related__grid">
      {% for relatedSlug in tool.relatedTools %}
        {% for relatedTool in tools.items %}
          {% if relatedTool.slug == relatedSlug %}
          <a href="/tools/{{ relatedTool.slug }}/" class="tool-related__card">
            <div class="tool-related__icon">
              {% if relatedTool.icon == "smartphone" %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect><line x1="12" y1="18" x2="12.01" y2="18"></line></svg>
              {% elif relatedTool.icon == "dollar-sign" %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
              {% elif relatedTool.icon == "bar-chart" %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg>
              {% else %}
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path></svg>
              {% endif %}
            </div>
            <div class="tool-related__content">
              <h3>{{ relatedTool.shortName }}</h3>
              <p>{{ relatedTool.tagline }}</p>
            </div>
            <svg class="tool-related__arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </a>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{# ============================================================================
