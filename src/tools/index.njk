---
layout: base.njk
title: "Free Phone Tools & Calculators"
description: "Free tools to help you switch to Vouch Mobile. Check phone compatibility, calculate savings, estimate data usage, and more."
permalink: /tools/
---

{% block schema %}
{# Breadcrumb Schema #}
{% set breadcrumbItems = [
  { name: "Home", url: site.url },
  { name: "Tools", url: site.url + "/tools/" }
] %}
{% include "schema/breadcrumb.njk" %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Free Phone Tools & Calculators",
  "description": "{{ description }}",
  "url": "{{ site.url }}/tools/",
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": [
      {% for tool in tools.items %}
      {
        "@type": "ListItem",
        "position": {{ loop.index }},
        "item": {
          "@type": "WebApplication",
          "name": "{{ tool.name }}",
          "description": "{{ tool.tagline }}",
          "url": "{{ site.url }}/tools/{{ tool.slug }}/"
        }
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
}
</script>
{% endblock %}

{# ============================================================================
   TOOLS INDEX HERO
   ============================================================================ #}
<section class="tools-hero">
  <div class="tools-hero__bg">
    <div class="tools-hero__gradient"></div>
    <div class="tools-hero__pattern"></div>
    <div class="tools-hero__orbs">
      <div class="tools-hero__orb tools-hero__orb--1"></div>
      <div class="tools-hero__orb tools-hero__orb--2"></div>
      <div class="tools-hero__orb tools-hero__orb--3"></div>
    </div>
  </div>

  <div class="container">
    <nav class="breadcrumb-v2" aria-label="Breadcrumb">
      <a href="/">Home</a>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
      <span>Tools</span>
    </nav>

    <div class="tools-hero__content">
      <div class="tools-hero__badge">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path></svg>
        Free Tools
      </div>

      <h1 class="tools-hero__title">Phone Tools & Calculators</h1>
      <p class="tools-hero__subtitle">Everything you need to make the switch to Vouch Mobile. Check compatibility, calculate savings, and plan your perfect phone service.</p>

      <div class="tools-hero__stats">
        <div class="tools-hero__stat">
          <span class="tools-hero__stat-value">{{ tools.items | length }}</span>
          <span class="tools-hero__stat-label">Free Tools</span>
        </div>
        <div class="tools-hero__stat-divider"></div>
        <div class="tools-hero__stat">
          <span class="tools-hero__stat-value">100%</span>
          <span class="tools-hero__stat-label">Free to Use</span>
        </div>
        <div class="tools-hero__stat-divider"></div>
        <div class="tools-hero__stat">
          <span class="tools-hero__stat-value">Instant</span>
          <span class="tools-hero__stat-label">Results</span>
        </div>
      </div>
    </div>
  </div>
</section>

{# ============================================================================
   TOOLS GRID
   ============================================================================ #}
<section class="tools-grid-section">
  <div class="container">
    <div class="tools-grid">
      {% for tool in tools.items %}
      <a href="/tools/{{ tool.slug }}/" class="tool-card">
        <div class="tool-card__icon">
          {% if tool.icon == "smartphone" %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect><line x1="12" y1="18" x2="12.01" y2="18"></line></svg>
          {% elif tool.icon == "dollar-sign" %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
          {% elif tool.icon == "bar-chart" %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg>
          {% else %}
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path></svg>
          {% endif %}
        </div>

        <div class="tool-card__content">
          <span class="tool-card__category">{{ tool.category }}</span>
          <h2 class="tool-card__title">{{ tool.shortName }}</h2>
          <p class="tool-card__desc">{{ tool.tagline }}</p>

          <ul class="tool-card__features">
            {% for feature in tool.features | slice(0, 3) %}
            <li>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"></polyline></svg>
              {{ feature }}
            </li>
            {% endfor %}
          </ul>

          <div class="tool-card__footer">
            <span class="tool-card__time">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
              {{ tool.estimatedTime }}
            </span>
            <span class="tool-card__cta">
              Use Tool
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
            </span>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

