<!-- Pricing Preview -->
<section class="section-lg">
  <div class="container">
    <h2 class="section-heading">Simple, Honest Pricing</h2>
    <p class="section-subheading">No surprises. No hidden fees. Just great value.</p>

    <div class="pricing-grid">
      {% for planKey, plan in site.plans %}
      <div class="pricing-card{% if plan.popular %} pricing-card-featured{% endif %}">
        <div class="pricing-header">
          {% if plan.popular %}<span class="pricing-label">Most Popular</span>{% endif %}
          <h3>{{ plan.name }}</h3>
          <div class="price">
            <span class="price-amount">${{ plan.monthlyPrice }}</span>
            <span class="price-period">/month</span>
          </div>
        </div>
        <div class="pricing-features">
          <ul>
            {% for feature in plan.features %}
            <li>{{ feature }}</li>
            {% endfor %}
          </ul>
        </div>
        <div class="pricing-cta">
          <a href="https://vouchmobile.com" class="btn {% if plan.popular %}btn-primary{% else %}btn-outline{% endif %} btn-lg">Get {{ plan.name }}</a>
        </div>
      </div>
      {% endfor %}
    </div>

    <p class="text-center text-light mt-8">
      <a href="/plans/" class="text-primary">View full plan details &rarr;</a>
    </p>
  </div>
</section>

