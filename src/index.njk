<!-- How It Works -->
<section class="how-it-works section-lg">
  <div class="container">
    <h2 class="section-heading">Get Started in Minutes</h2>
    <p class="section-subheading">Switching has never been easier</p>

    <div class="steps">
      <div class="step">
        <div class="step-number">1</div>
        <h3>Choose Your Plan</h3>
        <p>Select unlimited for $30/mo or Elite for $40/mo</p>
      </div>
      <div class="step">
        <div class="step-number">2</div>
        <h3>Get Your SIM</h3>
        <p>Free shipping or instant eSIM activation</p>
      </div>
      <div class="step">
        <div class="step-number">3</div>
        <h3>Activate & Save</h3>
        <p>Pop in your SIM and start saving immediately</p>
      </div>
    </div>
  </div>
</section>

<!-- Coverage Section -->
<section class="coverage section-lg" id="coverage">
  <div class="container">
    <div class="coverage-content">
      <div class="coverage-info">
        <h2>Nationwide Coverage You Can Count On</h2>
        <p>Vouch Mobile runs on AT&T's award-winning network, giving you reliable 5G and LTE coverage across the country.</p>
        <div class="coverage-stats">
          <div class="stat">
            <div class="stat-value">99%</div>
            <div class="stat-label">US Population Covered</div>
          </div>
          <div class="stat">
            <div class="stat-value">5G</div>
            <div class="stat-label">Network Access</div>
          </div>
        </div>
        <a href="/coverage/" class="btn btn-primary mt-8">Check Coverage</a>
      </div>
      <div class="coverage-map">
        {% image "/images/coverage-map.png", "AT&T Coverage Map", [400, 800, 1200], "(min-width: 1024px) 50vw, 100vw" %}
      </div>
    </div>
  </div>
</section>

<!-- Pricing Section -->
<section class="pricing section-lg" id="pricing">
  <div class="container">
    <h2 class="text-center text-3xl mb-4">Choose Your Plan</h2>
    <p class="text-center text-light mb-8">Save more when you pay annually. No credit check required.</p>

    <!-- Billing Toggle -->
    <div class="billing-toggle">
      <span class="billing-option">Monthly</span>
      <label class="toggle-switch">
        <input type="checkbox" id="billing-toggle" checked>
        <span class="toggle-slider"></span>
        <span class="sr-only">Toggle between monthly and annual billing</span>
      </label>
      <span class="billing-option billing-option-active">Annual <span class="save-badge">Save $120</span></span>
    </div>

    <div class="pricing-grid">
      {% for planKey, plan in site.plans %}
      <div class="pricing-card{% if plan.popular %} pricing-card-featured{% endif %}">
        <div class="pricing-header">
          {% if plan.popular %}<span class="pricing-label">Most Popular</span>{% endif %}
          <h3>{{ plan.name }}</h3>
          <p class="plan-tagline">{{ plan.tagline | default("Great value for everyday use") }}</p>
          <div class="price">
            <span class="price-amount" data-monthly="{{ plan.monthlyPrice }}" data-annual="{{ plan.annualPrice }}">${{ plan.annualPrice }}</span>
            <span class="price-period">/month</span>
          </div>
          <p class="price-note annual-note">Billed ${{ plan.annualPrice * 12 }}/year</p>
          <p class="price-note monthly-note" style="display: none;">Billed monthly</p>
        </div>
        <div class="pricing-features">
          <ul>
            {% for feature in plan.features %}
            <li>{{ feature }}</li>
            {% endfor %}
          </ul>
        </div>
        <div class="pricing-cta">
          <a href="https://vouchmobile.com" class="btn {% if plan.popular %}btn-primary{% else %}btn-outline{% endif %} btn-lg">Get {{ plan.name }}</a>
        </div>
      </div>
      {% endfor %}
    </div>

    <p class="text-center text-light mt-8" style="font-size: 0.875rem;">All plans include taxes & fees. Cancel anytime.</p>
  </div>
</section>

<!-- Savings Calculator -->
<section class="section">
  <div class="container">
    {% include "savings-calculator.njk" %}
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section section-lg">
  <div class="container">
    <h2>Ready to Cut Your Phone Bill?</h2>
    <p>Join thousands of happy customers saving money with Vouch Mobile.</p>
    <a href="https://vouchmobile.com" class="btn btn-dark btn-lg">Switch to Vouch Mobile</a>
  </div>
</section>
